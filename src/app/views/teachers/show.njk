{% extends "layout.njk" %}


{% block head %}
    <title>Professores</title>
{% endblock %}

{% block content %}

<div class="card">

    <section 
        class="card-image" 
        style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
    </section>

    <section class="card-details">

        <h3>Professor</h3>

        <div class="item">
            <div>Nome</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{ teacher.age }}</div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
            <div><span>{{ teacher.education_level }}</span></div>
        </div>

        <div class="item">
            <div>Tipo de Aula</div>
            <div>{{ teacher.class_type }}</div>
        </div>

        <div class="item">
            <div>Disciplinas ensinadas</div>
            <div>
                {% for subject in teacher.subjects_taught %}
                    <span> {{ subject }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>

        <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>

    </section>

</div>


{% endblock  %}