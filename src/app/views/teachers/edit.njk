{% extends "layout.njk" %}


{% block head %}
    <title>Edição - Professores</title>
{% endblock %}

{% block content %}

<div class="card">

    <section 
        class="card-image" 
        style="background: url({{teacher.avatar_url}}) no-repeat center center / cover">
    </section>

    <section class="card-details">

        <form method="POST" action="/teachers?_method=PUT">

            <h3>Editar Professor</h3>

            {% include 'teachers/fields.njk' %}

            <input 
                type="hidden" 
                name="id" 
                value="{{teacher.id}}"
            >
        </form>

        <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
            <input type="hidden" name="id" value = "{{teacher.id}}">
            <button type="submit">Deletar</button>
        </form>

    </section>

{% include 'confirm.njk' %}

</div>






{% endblock  %}