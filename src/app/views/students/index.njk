{% extends "layout.njk" %}


{% block head %}
    <title>Alunos</title>
{% endblock %}

{% block content %}

<div class="card table-container students-table">

    <div class="header">
        <a class="button" href="/students/create">Criar</a>
        <form action="/students" method="GET">
            <input 
                type="text" 
                name="filter" 
                value="{{filter}}"
                placeholder="Nome ou Email"
            >
            <button type="submit">Filtrar</button>
        </form>
    </div>

    <table width="100%">

        <thead>
            <tr>
                <th>Nome Completo</th>
                <th>Email</th>
                <th>Ano Escolar</th>
                <th>Instrutor</th>
                <th>Ação</th>
            </tr>
        </thead>

        <tbody>
            {% for student in students %}
                <tr>
                    <td>
                        <span style="background-image: url({{student.avatar_url}})"></span>
                        {{ student.name }}
                    </td>
                    <td>{{student.email}}</td>
                    <td>{{student.school_year}}</td>
                    <td><a href="/teachers/{{student.teacher_id}}">{{student.teacher_name}}</a></td>
                    <td><a href="/students/{{student.id}}">Ver</a></td>
                </tr>
            {% endfor %}
        </tbody>
    
    </table>

    <div class="pagination"
        data-page="{{pagination.page}}"
        data-totalpages="{{pagination.totalPages}}"
        data-filter="{{filter}}"
    ></div>

</div>


{% endblock  %}